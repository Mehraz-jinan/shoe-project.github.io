<% layout('layout/boilerplate')  %> 
<%- include('../partial/navbar')  %> 

<% if(activeUser && activeUser.auth){ %> 
<section id="banner">
<% for(site of siteDataShow){ %> 
<div class="container">
    <div class="row">
        <div class="col-lg-12">
          <div class="section-title">
            <h4>
              <span>
                <p><%=site.welcome %></p>
              </span> <%= process.env.PAGENAME  %> 
            </h4>
          </div>
        </div>
        
    </div>
</div>
<div class="container g-0">
  <div class="row">
    <div class="col-12">
      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner"> 
          <% site.bannerImage.forEach((image , i) => 
            { %> 
              
          <div class="carousel-item <%= i===0 ? 'active' : '' %>">
            <a href="/site-setting/<%= site._id%>">Edit Banner Item</a>
            <img src="<%= image.url %>" class="d-block w-100 img-fluid" alt="banner-image">
        </div>
          
        <% }) %>
      </div> 
        <% if(site.bannerImage.length > 1){ %> 
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %> 
      </div>
  </div>
</div>
</div>
<% } %> 
</section>
<% }else{ %>
  <section id="banner">
    <% for(site of siteDataShow){ %> 
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
            <div class="section-title">
              <h4>
                <span>
                  <p><%=site.welcome  %></p>
                </span> <%= process.env.PAGENAME  %> 
              </h4>
            </div>
          </div>
          
      </div>
  </div>
  <div class="container g-0">
    <div class="row">
      <div class="col-12">
        <div id="carouselExample" class="carousel slide">
          <div class="carousel-inner">
              <% site.bannerImage.forEach((image , i) => { %> 
            <div class="carousel-item <%= i===0 ? 'active' : '' %>">
              <img src="<%= image.url %>" class="d-block w-100 img-fluid" alt="banner-image">
            </div>
            <% }) %> 
          </div>
          <% if(site.bannerImage.length > 1){ %> 
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
          <% } %> 
        </div>
    </div>
  </div>
  </div>
  <% } %> 
  </section> 
<% } %> 

<!-- Banner Part Ends -->

<!-- Featuring Part Starts -->
<%- include('./featuring.ejs')  %> 
<%- include('./products.ejs')  %> 
