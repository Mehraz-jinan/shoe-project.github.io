<% layout('layout/boilerplate') %> 
<section id="auth">
    <div class="container-fluid">
       <div class="row">
        <div class="col-lg-6 gx-5 gy-2">
            
            <div class="sign-in">
                <div class="sign-in-header">
                    <p>
                        Sign-in
                    </p>
                    <small>
                       <p>To Your Account
                        </p>
                    </small>
                </div>
            <div class="sign-in-form">
                <form action="/auth/login" method="POST">
                    <div class="form-decor">
                        <label for="username"> 
                            <p>
                                Phone Number/E-mail:
                            </p>
                        </label>
                                    <input type="text" id="username" name="username">
                                        </input>
                    </div>
                    <div class="form-decor">
                        <label for="password"> 
                            <p>
                               Password:
                            </p>
                        </label>
                        <input type="text"id="password" name="password">
                    </div>
                    <div class="sign-in-button">
                        <button>Sign in</button>
                    </div>
                </form>
                
            </div>
            <a href=""class="password-recovary">Forgot Password</a>
            </div>
        </div>
    
        <div class="col-lg-6 gx-5 gy-2">
            <div class="sign-in">
                <div class="sign-in-header">
                    <p>
                        Sign-Up
                    </p>
                    <small>
                       <p>Create An Account
                        </p>
                    </small>
                </div>
            <div class="sign-in-form">
                <form action="/auth/register" method="POST">
                    <div class="form-decor">
                        <label for="username"> 
                            <p>
                                Name:
                            </p>
                        </label>
                                    <input type="text" id="username" name="username">
                                        </input>
                    </div>
                    <div class="form-decor">
                        <label for="usermail"> 
                            <p>
                                E-mail:
                            </p>
                        </label>
                        <input type="email"id="usermail" name="email">
                    </div>
                    <div class="form-decor">
                        <label for="usercontact"> 
                            <p>
                                Contact:
                            </p>
                        </label>
                        <input type="text"id="usercontact" name="contact">
                    </div>
                    <div class="form-decor">
                        <label for="userpass"> 
                            <p>
                                Password:
                            </p>
                        </label>
                        <input type="text"id="userpass" name="password">
                    </div>
                    
                    <div class="sign-in-button">
                        <button>Create Account</button>
                    </div>
                </form>
            </div>
            </div>
        </div>
        
       </div>
    </div>
</section>