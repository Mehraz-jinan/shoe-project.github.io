<section id="new-arrival">
    <div class="arrival-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h4>
                            <span>
                              <p>New Design,</p>
                            </span> Arrival
                          </h4>
                    </div>
                </div>
            </div>
        </div>
    </div> 
    <div class="arrival-content">
        <div class="container-fluid">
            <div class="row">
                <% if(thirdLast){ %> 
                <div class="col-lg-3">
                     
                    <div class="first-arrival-content">
                        <div class="arrival-img">
                            <img class="img-fluid" src="<%= thirdLast.productImage  %> " alt="new-arrival">
                        </div>
                        <div class="arrival-description">
                            <p class="arrival-product-name">
                                <%= thirdLast.productName  %>.
                            </p>
                             <p class="arrival-in-stock">Limited Stock: 50 Piece Only</p>
                             <p class="arrival-in-stock"> Available Now: <%= thirdLast.productAvaility  %></p>
                             <b class="arrival-product-price">
                                Price: <%= thirdLast.productPrice %>$.
                            </b>
                            <small class="text-muted">
                                Do Hurry and Check It out
                            </small>
                        </div>
                        <a href="/product/product-view/<%= thirdLast._id  %> ">View Product</a>
                        
                    </div>
                </div>
                <% }else{ %>
                    <p>Coming Sonn </p>
                <% } %> 
                <% if(secondLast){ %> 
                <div class="col-lg-3">
                    <div class="first-arrival-content">
                        <div class="arrival-img">
                            <img class="img-fluid" src="<%=secondLast.productImage   %> " alt="new-arrival">
                        </div>
                        <div class="arrival-description">
                            <p class="arrival-product-name">
                                <%= secondLast.productName  %> 
                            </p>
                             <p class="arrival-in-stock">Limited Stock: 50 Piece Only</p>
                             <p class="arrival-in-stock"> Available Now: <%= secondLast.productAvaility  %> e</p>
                             <b class="arrival-product-price">
                                Price: <%= secondLast.productPrice  %>$ .
                            </b>
                            <small class="text-muted">
                                Do Hurry and Check It out
                            </small>
                        </div>
                        <a href="/product/product-view/<%= secondLast._id  %> ">View Product</a>
                        
                    </div>
                </div>
                <% }else{ %> 
                    <p>Coming Sonn </p>
                <% } %> 
                <% if(lastProduct){ %> 
                <div class="col-lg-6">
                    <div class="last-arrival-content">
                        <div class="arrival-img">
                            <img class="img-fluid" src="<%= lastProduct.productImage  %> " alt="new-arrival">
                        </div>
                        <div class="arrival-description">
                            <p class="arrival-product-name">
                                <%= lastProduct.productName  %> 
                            </p>
                             <p class="arrival-in-stock">Limited Stock: 50 Piece Only</p>
                             <p class="arrival-in-stock"> Available Now: <%= lastProduct.productAvaility  %> </p>
                             <b class="arrival-product-price">
                                Price: <%= lastProduct.productPrice %>$
                            </b>
                            <small class="text-muted">
                                Do Hurry and Check It out
                            </small>
                        </div>
                        <a href="/product/product-view/<%= lastProduct._id  %> ">View Product</a>
                    </div>
                </div>
                <% }else{ %>
                    <p>Coming Soon</p>
                <% } %>  
                 
            </div>
        </div>
    </div> 
</section>