<% layout('layout/boilerplate') %>
<section id="comment-edit">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-2 m-auto">
                <div class="edit-heading">
                    <h3>
                        Edit Comment
                    </h3>
                </div>
                <div class="main-edit">
                    <form action="/product/product-view/<%= findProduct._id  %>/review/<%= findReview._id %>/subreview/<%= findComment._id %>/comment/edit?_method=PUT" method="POST">
                        <div class="common-design">
                            <input type="text" value="<%= findComment.subReview  %>" name="subReview">
                        </div>
                        <div class="save-button">
                            <button>Save Comment</button>
                        </div>
                    </form>
                    <a class="back-to" href="/product/product-view/<%= findProduct._id %>" title="Back-to-post" >
                        <i class="fa-solid fa-arrow-left px-3"></i>Back To Post
                    </a>
            </div>
            </div>
        </div>
    </div>
</section> 