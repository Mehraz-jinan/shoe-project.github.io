<% layout('layout/boilerplate') %>
<%- include('../partial/navbar.ejs')  %>
<section id="user-edit">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="user-edit-heading">
                    <p>Edit Your Information</p>
                </div>
                <div class="user-edit-form">
                    <form action="/user/info/<%= findUser._id  %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="profile-img">
                        <img src="<%= findUser.profilePic.url %>" alt="" class="img-fluid">
                        <input type="input" value="<%= findUser.profilePic.filename %>" name="deleteimage" class="d-none"> 
                        <label for="">Choose profile picture:</label>
                        <input type="file" class="form-class" name="profilePic">
                        
                            <label for="contact">Change Contact Number:</label>
                            <input type="text" name="contact" value="<%= findUser.contact %> ">
                            <% if(!findUser.address){ %> 
                            <label for="address">Set Your Address:</label>  
                            <input type="text" name="address"> 
                                <% }else{ %> 
                            <label for="address">Change Your Address:</label>  
                            <input type="text" name="address" value="<%= findUser.address  %> "> 
                            <% } %> 
                            <button>
                                Save Changes
                            </button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>  