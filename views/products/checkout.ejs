<% layout('layout/boilerplate') %> 
<%- include('../partial/navbar')  %>
<section id="checkout">
    <div class="container">
        <div class="row gy-2">
            <% if(!findUser.addtocart){ %>
                <h2>You haven't add yet to the cart</h2>
            <% }else{ %>  
            <% for(let cart of findUser.addtocart){ %> 
            <div class="col-lg-4">
                <div class="product-avatar">
                   <img class="img-fluid" src="<%= cart.productInfo.productImage  %> " alt="">
                </div>
            </div>
            <div class="col-lg-8">
                <div class="product-innovoice">
                    <div class="product-title">
                        <p>
                            <b>
                                <%= cart.productInfo.productName  %> 
                            </b>
                        </p>
                    </div>
                    <div class="product-price">
                        
                       <p class="text-muted">
                        <small> Product Quantity: <%= cart.productQuantity  %>
                        </small> 
                        &#10005;
                        <small>
                            product Price: <%= cart.productInfo.productPrice  %> 
                        </small>
                        &#10132;
                    </p>
                        
                       
                       <p><%= cart.productInfo.productPrice * cart.productQuantity  %>$ </p>
                       
                    
                    </div>
                    
                    <div class="delivery-address">
                        <i class="fa-solid fa-location-dot"></i>
                        <b>
                             <%= activeUser.address  %> 
                        </b>
                        
                    </div>
                    
                    
                    
                </div>
            </div>
            <hr>
            <% } %> 
            <% } %> 
        </div>
    </div>
   
    <div class="final-checkout">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <div class="final-setup">
                        <div class="delivery-address">
                            <h3>
                                Select Your delivery Address
                            </h3>
                            <a href="">
                                <i class="fa-solid fa-location-crosshairs"></i>
                                keep your current Address
                            </a>
                            <a href="">
                                <i class="fa-solid fa-location-arrow"></i>
                                Set a new Address
                            </a>
                        </div>
                        <div class="payment-option">
                            <h3>
                                Choose Your payment method
                            </h3>
                            <form action="">
                                <div class="pay-set"> <input type="radio" id="cash" name="payment" value="Cash On Delivery">
                                <label for="cash">
                                    Cash On Delivery
                                </label>
                            </div>
                            <div class="pay-set">
                                <input type="radio" id="net" name="payment" value="Net Banking">
                                <label for="net">
                                    Net Banking
                                </label>
                                </div>
                                <div class="pay-set">
                                    <input type="radio" id="card" name="payment" value="Pay On Card">
                                    <label for="card">
                                        Pay On Card
                                     </label>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="order-summary">
                        <div class="product-quantity">
                            <p>Total Quantity:</p>
                            <p>
                                <%for(let sum of findUser.addtocart){ %>
                                    <%= sum.productQuantity  %> 
                                    <% } %>  
                            </p>
                        </div>
                        <div class="shopping-cost">
                            <p>Shopping-charge(Tax/VAT):</p>
                            <p>10$</p>
                        </div>
                        <div class="shipping-cost">
                            <p>Delivery Charge:</p>
                            <p>5$</p>
                        </div>
                        <hr>
                        <div class="total-cost">
                            <p>Subtotal: 
                                <%= findUser.productQuantity * findUser.productPrice  %>
                              </p>
                            <p>
                                 
                            </p>
                        </div>
                        <div class="checkout-button">
                        <form action="">
                            <button>Checkout</button>
                        </form>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 